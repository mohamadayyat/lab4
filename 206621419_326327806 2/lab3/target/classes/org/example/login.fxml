<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.loginController"
      spacing="10" alignment="CENTER" prefWidth="360" prefHeight="220" style="-fx-padding:20;">
    <Label text="Login (Lab3)" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
    <TextField fx:id="usernameField" promptText="Username (email)" prefWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="120"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>
